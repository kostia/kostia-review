<div class="panel panel-default">
  <div class="panel-heading">
    <div class="media">
      <% if post.author_email.present? %>
        <%= render('blog_post/gravatar', email: post.author_email) %>
      <% end %>

      <div class="media-body">
        <h2 class"media-heading">
          <%= link_to(cms_path(post)) do %>
            <%= cms_tag(:span, post, :headline) %>
          <% end %>
        </h2>

        <%= render('blog_post/published_at', post: post) %>

        <% if post.author_name.present? %>
          <%= render('blog_post/published_by', post: post) %>
        <% end %>
      </div>
    </div>
  </div>

  <div class="panel-body">
    <%= render('blog_post/main_content', post: post) %>
  </div>

  <div class="panel-footer">
    <% if post.enable_comments? && post.disqus_shortname.present? %>
      <%= render('comment_count', post: post) %>
    <% end %>
  </div>
</div>
