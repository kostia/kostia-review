<% previous_post = post.previous_post %>
<% next_post = post.next_post %>

<ul class="pager">
  <% if previous_post.present? %>
    <li class="previous">
      <%= link_to(scrivito_path(previous_post)) do %>
        <span class="glyphicon glyphicon-chevron-left"></span>

        <%= scrivito_field(previous_post, :headline) %>
      <% end %>
    </li>
  <% end %>

  <% if next_post.present? %>
    <li class="next">
      <%= link_to(scrivito_path(next_post)) do %>
        <%= scrivito_field(next_post, :headline) %>

        <span class="glyphicon glyphicon-chevron-right"></span>
      <% end %>
    </li>
  <% end %>
</ul>
